                  <% @volunteer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="field">
                <%= f.hidden_field :name, :value=> @current_user.name %>
              </div>
              <%= f.hidden_field :quantity, :value=> 1 %>

              <%= f.hidden_field :campaign_id, :value=> campaign.id %>

              <div>
                <%= f.submit "Volunteer" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


